let mapleader = " "

" config
set scrolloff=5
set incsearch
set hlsearch
set smartcase
set ignorecase
set relativenumber
set showcmd
set clipboard=unnamed,unnamedplus

" plugins
Plug 'easymotion/vim-easymotion'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'machakann/vim-highlightedyank'
Plug 'preservim/nerdtree'
Plug 'terryma/vim-multiple-cursors'
Plug 'tommcdo/vim-exchange'

" key mapping
map H ^
map L $
map J 5j
map K 5k
nmap Q gq
nmap <C-k> gt
nmap <C-j> gT
nmap <C-h> <C-w>h
nmap <C-l> <C-w>l
map \ :noh<CR>

" idea config
nmap <CR> <Action>(GotoDeclaration)
nmap <BS> <Action>(Back)
nmap <D-k> <Action>(Forward)
nmap <D-j> <Action>(Back)
nmap <Leader>rr <Action>(RenameElement)
nmap <Leader>R <Action>(Run)
nmap <Leader>D <Action>(Debug)

" easymotion config
let g:EasyMotion_startofline = 0
let g:EasyMotion_smartcase = 1
let g:EasyMotion_use_upper = 1
let g:EasyMotion_use_smartsign = 1
map <Leader>s <Plug>(easymotion-sl)
map <Leader>f <Plug>(easymotion-fl)
map <Leader>F <Plug>(easymotion-Fl)
map <Leader>t <Plug>(easymotion-tl)
map <Leader>T <Plug>(easymotion-Tl)
" nmap / <Plug>(easymotion-sn)
" nmap n <Plug>(easymotion-next)
" nmap N <Plug>(easymotion-prev)
map <Leader><Leader>h <Plug>(easymotion-linebackward)
map <Leader><Leader>l <Plug>(easymotion-lineforward)

" multiple-cursors config
nmap <C-n> <Plug>NextWholeOccurrence
xmap <C-n> <Plug>NextWholeOccurrence
nmap g<C-n> <Plug>NextOccurrence
xmap g<C-n> <Plug>NextOccurrence
xmap <C-x> <Plug>SkipOccurrence
xmap <C-p> <Plug>RemoveOccurrence
